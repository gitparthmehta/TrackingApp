<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.OtpVerificationActivity">

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/logo" />

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_20_size"
        android:layout_marginBottom="@dimen/common_20_size"
        android:text="Verification"
        android:textColor="@color/black"
        android:textSize="@dimen/common_20_size"
        android:textStyle="bold" />

    <TextView
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_10_size"
        android:text="Enter 6 digit number yjay sent tp"
        android:layout_gravity="center"
        android:textSize="@dimen/common_15_size"
        android:textStyle="normal" />

    <TextView
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8888888888"
        android:textSize="@dimen/common_15_size"
        android:textStyle="normal" />

    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/common_10_size"
        android:textColor="#000"
        app:bar_enabled="true"
        app:bar_height="2dp"
        app:height="40dp"
        app:length="6"
        app:otp="123456"
        app:otp_text_size="24dp"
        app:width="40dp" />


    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/common_20_size"
        android:backgroundTint="@color/colorPrimary"
        android:paddingLeft="@dimen/common_30_size"
        android:paddingRight="@dimen/common_30_size"
        android:text="CONTINUE"
        android:textColor="@color/white" />
</LinearLayout>